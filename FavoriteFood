<script>
function findOut() {
var para = document.createElement("p"); 
var node = document.createTextNode("HA! YOU'LL NEVER KNOW!"); 
para.appendChild(node); 
var element = document.getElementById("div1"); 
element.appendChild(para); 
}

function answerDrink() {
var para = document.createElement("p"); 
var node = document.createTextNode("The suspense!"); 
para.appendChild(node); 
var element = document.getElementById("div2"); 
element.appendChild(para); 
}

function answerColor() {
var para = document.createElement("p"); 
var node = document.createTextNode("Third time's the charm! It's Blue ^_^"); 
para.appendChild(node); 
var element = document.getElementById("div3"); 
element.appendChild(para); 
} 

